    <gazebo reference="rl_l2">
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>
      <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="rl_foot">
      <mu1>0.6</mu1>
      <mu2>0.6</mu2>
